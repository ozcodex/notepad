set nocompatible
set number
set noruler
set laststatus=2
set statusline=%F\ %h%w%m%r%=%-14.(%l,%c%V%)\ %P
filetype plugin indent on
syntax on
set wildmenu
set showcmd
set hlsearch
set background=dark
set incsearch
set cmdheight=1
set visualbell
set t_vb=
set mouse=a
nnoremap <C-L> :nohl<CR><C-L>
set colorcolumn=80
hi ColorColumn ctermbg=darkgrey
set expandtab ts=2 sw=2 ai
set clipboard=unnamedplus
